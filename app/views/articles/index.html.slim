p#notice = notice

h1.article-title Articles

table.shadow-box
  thead
    tr
      th Title
      th Content
      th colspan="3"

  tbody
    - @articles.each do |article|
      tr
        td.title-column = article.title
        td.content-column = article.content
        td = link_to 'Show', article
        td = link_to 'Edit', edit_article_path(article)
        td = link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }

br
.new-article = link_to 'New Article', new_article_path

